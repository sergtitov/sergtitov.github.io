<!-- ============================================================= SECTION – SHARE ============================================================= -->

<section id="share" class="light-bg">
    <div class="container">

        <div class="col-sm-3 reset-padding">
            <a href="<%= linkedin %>" class="btn-share-md">
                <p class="name">Linkedin</p>
                <i class="icon-s-linkedin"></i>
            </a>
        </div><!-- /.col -->

        <div class="col-sm-3 reset-padding">
            <a href="<%= twitter_path %>" class="btn-share-md">
                <p class="name">Twitter</p>
                <i class="icon-s-twitter"></i>
            </a>
        </div><!-- /.col -->

        <div class="col-sm-3 reset-padding">
            <a href="<%= facebook %>" class="btn-share-md">
                <p class="name">Facebook</p>
                <i class="icon-s-facebook"></i>
            </a>
        </div><!-- /.col -->

        <div class="col-sm-3 reset-padding">
            <a href="<%= googlePlus %>" class="btn-share-md">
                <p class="name">Google +</p>
                <i class="icon-s-gplus"></i>
            </a>
        </div><!-- /.col -->

    </div><!-- /.container -->
</section>

<!-- ============================================================= SECTION – SHARE : END ============================================================= -->
